<h1>新規アンケート</h1>
<%= form_with model: @question, local: true do |f| %>
  <%= f.text_field :username, class: "", placeholder: "ユーザー名", required: true %>
  <br />
  <%= f.text_area :description, class: "", placeholder: "質問内容", required: true %>
  <br />
  <%= f.text_field :answer_1, class: "", placeholder: "選択肢1" %>
  <%= f.text_field :answer_2, class: "", placeholder: "選択肢2" %>
  <%= f.text_field :answer_3, class: "", placeholder: "選択肢3" %>
  <%= f.text_field :answer_4, class: "", placeholder: "選択肢4" %>
  <br />
  <%= f.submit "作成する", class: "btn btn-primary" %>
<% end %>